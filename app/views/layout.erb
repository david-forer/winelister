  <body>

<div class="w3-top">
  <div class="w3-bar w3-black w3-card">
    <a class="w3-bar-item w3-button w3-padding-large w3-hide-medium w3-hide-large w3-right" href="javascript:void(0)" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
    <a href="/users" class="w3-bar-item w3-button w3-padding-large">Users</a>
    <a href="/winereviews" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Wine Reviews</a>
    <a href="/winereviews/new" class="w3-bar-item w3-button w3-padding-large w3-hide-small">New Wine Review</a>
    <a href="/wine_lists" class="w3-bar-item w3-button w3-padding-large">Wine Lists</a>
    <a href="winelists/new" class="w3-bar-item w3-button w3-padding-large">New Wine List</a>
    <a href="/logout" class="w3-bar-item w3-button w3-padding-large">Logout</a>
  </div>
</div>


    <div class="wrapper">
    <% if flash[:message] %>
      <h4 style="color: blue;"><%= flash[:message] %><br><br></h4>
      <% end %>
      <% if flash[:errors] %>
      <h4 style="color: red;"><%= flash[:errors] %><br><br></h4>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>WineLister Review App</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
